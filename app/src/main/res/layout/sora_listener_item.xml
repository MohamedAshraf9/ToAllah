<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/_3sdp"
    android:padding="@dimen/_2sdp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:contentDescription="@string/surah_item_card_ar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/soraNumber"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:text="Ø£"
            android:textSize="13sp"
            android:layout_marginEnd="@dimen/_3sdp"
            android:background="@drawable/id_soura_background"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:contentDescription="@string/surah_number_ar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="start"
            android:orientation="vertical"
            android:contentDescription="@string/surah_name_container_ar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/relative"
            app:layout_constraintStart_toEndOf="@+id/soraNumber"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/soraName"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:fontFamily="@font/amiri_regular"
                android:text="Al-Fatihah"
                android:contentDescription="@string/surah_name_ar" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:contentDescription="@string/surah_actions_container_ar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fav"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:contentDescription="@string/favorite_button_ar" />

            <ImageView
                android:id="@+id/download"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_margin="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_baseline_arrow_circle_down_24"
                android:contentDescription="@string/download_button_ar"
                tools:src="@drawable/ic_baseline_download_done_24"
                tools:tint="@color/success_green" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>