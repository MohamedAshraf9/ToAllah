<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
<androidx.constraintlayout.motion.widget.MotionLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature_data.presentation.ui.home.HomeFragment"
    app:layoutDescription="@xml/fragment_home_scene">


    <ImageView
        android:id="@+id/iv_prayer_widget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@color/grey"
        android:backgroundTint="@color/grey"
        android:contentDescription="@string/islamicAzan"
        android:scaleType="centerCrop"
        android:src="@drawable/img_asr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/qibla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:src="@drawable/ic_qibla"
        app:tint="@color/white"
        tools:layout_editor_absoluteX="346dp" />




    <TextView
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@+id/openDrawable"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/openDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/baseline_menu_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/salahName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/_32ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/iv_prayer_widget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentLocation" />

    <TextView
        android:id="@+id/prayer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/_32ssp"
        app:layout_constraintEnd_toEndOf="@+id/salahName"
        app:layout_constraintStart_toStartOf="@+id/salahName"
        app:layout_constraintTop_toBottomOf="@+id/salahName" />

    <TextView
        android:id="@+id/prayer_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/_24ssp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_prayer_widget"
        app:layout_constraintEnd_toEndOf="@+id/prayer_time"
        app:layout_constraintStart_toStartOf="@+id/prayer_time"
        app:layout_constraintTop_toBottomOf="@+id/prayer_time" />


    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_prayer_widget">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:windowSoftInputMode="adjustResize"
            tools:ignore="ScrollViewCount">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/thumbnail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
    android:id="@+id/update"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:text="تحديث"
    android:textColor="@color/text_color"
    android:background="@drawable/type_soura_background"
    android:textSize="@dimen/_12ssp"
        app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
        android:id="@+id/dayDetails"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_3sdp"
        android:text="@string/loading"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/hijri_date"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/_3sdp"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dayDetails"
        app:layout_constraintTop_toBottomOf="@+id/dayDetails" />



</androidx.constraintlayout.widget.ConstraintLayout>




                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:padding="@dimen/_3sdp"
                            android:stretchColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_3sdp">

                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="start"
                                    android:layout_marginStart="@dimen/_3sdp"
                                    app:tint="#E7B10A"
                                    android:src="@drawable/ic_notifications_active_24" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_1sdp"
                                    android:text="@string/prayer_name"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="@string/time"
                                    android:textStyle="bold" />

                            </TableRow>

                            <!--Fajr-->
                            <TableRow>

                                <CheckBox android:id="@+id/cb_fajr"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/fajr"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/fajr_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />

                            </TableRow>

                            <!--Sunrise-->
                            <TableRow>

                                <CheckBox android:id="@+id/sunrise"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/sunrise"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/sunriseTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />

                            </TableRow>

                            <!--Dhuhur-->
                            <TableRow>

                                <CheckBox

                                    android:id="@+id/cb_dhuhr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/duhr"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/dhuhr_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />

                            </TableRow>

                            <!--Asr-->
                            <TableRow>

                                <CheckBox

                                    android:id="@+id/cb_asr"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/asr"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/asr_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />
                            </TableRow>

                            <!--Maghrib-->
                            <TableRow>

                                <CheckBox android:id="@+id/cb_maghrib"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/maghreb"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/maghrib_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />
                            </TableRow>

                            <!--Isha-->
                            <TableRow>

                                <CheckBox android:id="@+id/cb_isha"
                                    />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/isha"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/isha_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_1sdp"
                                    android:gravity="center"
                                    android:text="@string/loading"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>