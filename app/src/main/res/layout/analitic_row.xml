<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_height="wrap_content"
    android:contentDescription="@string/progress_section">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/container"
            android:padding="@dimen/_3sdp">

            <TextView
                android:id="@+id/month"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textDirection="ltr"
                android:textAlignment="viewStart"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_2sdp"
                android:gravity="center_vertical"
                android:text="project title"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                android:contentDescription="@string/project_title_desc"
                tools:ignore="RtlCompat" />

            <ProgressBar
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:id="@+id/progressBar"
                android:progress="30"
                android:gravity="center_vertical"
                android:progressTint="@color/primary_color"
                android:progressBackgroundTint="#EDEBEB"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_height="wrap_content"
                android:contentDescription="@string/progress_bar_desc"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:layout_below="@+id/container"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_alignParentEnd="true"
            android:id="@+id/percent_pagesDone"
            android:contentDescription="@string/progress_percent_desc"/>
    </RelativeLayout>
</LinearLayout>
