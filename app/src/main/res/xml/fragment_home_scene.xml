<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        app:motionInterpolator="easeInOut">

        <OnSwipe
            app:touchAnchorId="@+id/ll_container"
            app:touchAnchorSide="top"
            app:dragDirection="dragUp" />

        <KeyFrameSet>
            <KeyAttribute
                app:motionTarget="@+id/salahName"
                app:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                app:motionTarget="@+id/salahName"
                app:framePosition="50"
                android:alpha="0.8" />
            <KeyAttribute
                app:motionTarget="@+id/salahName"
                app:framePosition="100"
                android:alpha="0.6" />

            <KeyAttribute
                app:motionTarget="@+id/prayer_time"
                app:framePosition="0"
                android:alpha="1.0" />
            <KeyAttribute
                app:motionTarget="@+id/prayer_time"
                app:framePosition="50"
                android:alpha="0.8" />
            <KeyAttribute
                app:motionTarget="@+id/prayer_time"
                app:framePosition="100"
                android:alpha="0.6" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/iv_prayer_widget">
            <Layout
                android:layout_width="0dp"
                android:layout_height="@dimen/_180sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/qibla">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="@+id/iv_prayer_widget"
                app:layout_constraintTop_toTopOf="@+id/iv_prayer_widget" />
            <Transform
                android:rotation="0"/>
        </Constraint>

        <Constraint android:id="@+id/openDrawable">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/currentLocation">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@+id/openDrawable"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/salahName">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintEnd_toEndOf="@+id/iv_prayer_widget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentLocation" />
        </Constraint>

        <Constraint android:id="@+id/prayer_time">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="@+id/salahName"
                app:layout_constraintStart_toStartOf="@+id/salahName"
                app:layout_constraintTop_toBottomOf="@+id/salahName" />
        </Constraint>

        <Constraint android:id="@+id/ll_container">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_prayer_widget" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/iv_prayer_widget">
            <Layout
                android:layout_width="0dp"
                android:layout_height="@dimen/_80sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/qibla">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="@+id/iv_prayer_widget"
                app:layout_constraintTop_toTopOf="@+id/iv_prayer_widget" />
            <Transform
                android:rotation="-41"/>
        </Constraint>

        <Constraint android:id="@+id/openDrawable">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/currentLocation">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@+id/openDrawable"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>

        <Constraint android:id="@+id/salahName">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentLocation" />
            <Transform
                android:scaleX="0.7"
                android:scaleY="0.7" />
        </Constraint>

        <Constraint android:id="@+id/prayer_time">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/currentLocation" />
            <Transform
                android:scaleX="0.8"
                android:scaleY="0.8" />
        </Constraint>

        <Constraint android:id="@+id/ll_container">
            <Layout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_prayer_widget" />
        </Constraint>

    </ConstraintSet>

</MotionScene>
